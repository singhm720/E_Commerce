<div class="col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center">Sign up</h2>
    </div>
    <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :name, class: "form-label mb-2"%>
        <%= f.text_field :name, class: "form-control form-control-lg"%>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label mb-2"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "form-control form-control-lg"%>
      </div>
    
      <div class="form-group">
        <%= f.label :password, class: "form-label mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password",
        class: "form-control form-control-lg"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
        class: "form-control form-control-lg"%>
      </div>

      <div class="form-group">
        <%= f.label :mobile_number %><br />
        <%= f.number_field :mobile_number,
        class: "form-control form-control-lg"%>
      </div>
    
      <div class="form-group mt-4">
        <%= f.submit "Sign up", class: "btn btn-primary"%>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
    </div>
  </div>
</div>





